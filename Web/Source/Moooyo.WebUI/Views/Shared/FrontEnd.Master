        var timeout1;
        function getMemberUnReadCount() {
            MemberLinkProvider.getMemberUnReadCount(function (data) {
                var count = $.parseJSON(data);
                if (count > 0) {
                    $("#memberUnReadCount").html(count);
                    $('.LiOne b').children('font').css({ "background": "#fff" });
                } else {
