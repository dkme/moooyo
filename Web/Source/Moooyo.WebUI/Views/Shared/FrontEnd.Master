        //            }
        //            setCountColor($("#unReadBeenViewedTimes"), count);
        //        }
        function getUnReadSystemMsgCount(count) {
            //                $("#unReadSystemMsgCount").html(count);
            //                setCountColor($("#unReadSystemMsgCount"), count);
        }
